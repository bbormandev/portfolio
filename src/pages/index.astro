---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="mx-auto max-w-3xl">
    <section class="px-6 py-20 md:py-24">
      <div class="space-y-6 md:space-y-8">
        <div class="space-y-1">
          <h1
            class="font-display text-5xl md:text-6xl font-bold leading-tight tracking-tight"
          >
            Brian Borman
          </h1>
          <p class="text-lg md:text-xl text-muted-foreground text-balance">
            Built with curiosity. Debugged with care.
          </p>
        </div>

        <p class="text-base md:text-lg leading-relaxed text-foreground/90">
          I'm a software engineer that loves learning how things work,
          experimenting with ideas, and turning curiosity into something useful
          (or at least entertaining).
        </p>
      </div>

      <div class="mt-12 md:mt-16 flex flex-wrap gap-4">
        <a
          href="/resume.pdf"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-accent-foreground rounded-lg hover:opacity-90 transition-opacity font-medium"
        >
          Resume
        </a>
        <a
          href="https://github.com/bbormandev"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-accent-foreground rounded-lg hover:opacity-90 transition-opacity font-medium"
        >
          GitHub
        </a>
        <a
          href="https://www.linkedin.com/in/brianborman"
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-accent-foreground rounded-lg hover:opacity-90 transition-opacity font-medium"
        >
          LinkedIn
        </a>
      </div>
    </section>
  </div>
</Layout>
